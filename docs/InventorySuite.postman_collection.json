									"pm.test(\"Guardar token y expiración\", function () {\r",
									"    const res = pm.response.json();\r",
									"    pm.expect(res.token, \"token faltante\").to.be.a(\"string\");\r",
									"\r",
									"    // Guardar el token\r",
									"    pm.collectionVariables.set(\"access_token\", res.token);\r",
									"\r",
									"    // Convertir la fecha a timestamp y guardar\r",
									"    const expTimestamp = new Date(res.expiration).getTime();\r",
									"    pm.collectionVariables.set(\"token_expires_at\", expTimestamp);\r",
