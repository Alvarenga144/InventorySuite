@model List<Inventory.Web.Models.ViewModels.VentaViewModel>
@{
    ViewData["Title"] = "Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Gesti√≥n de Ventas</h2>
    <a asp-action="Create" class="btn btn-success">
        Nueva Venta
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h5 class="alert-heading">No hay ventas registradas</h5>
        <p class="mb-0">Comienza registrando tu primera venta haciendo clic en "Nueva Venta"</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID Venta</th>
                            <th>Fecha</th>
                            <th>Vendedor</th>
                            <th class="text-end">Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model)
                        {
                            <tr>
                                <td><strong>#@venta.IdVenta</strong></td>
                                <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@venta.VendedorNombre</td>
                                <td class="text-end">
                                    <strong>$@venta.Total.ToString("N2")</strong>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Detalle" asp-route-id="@venta.IdVenta" 
                                       class="btn btn-sm btn-outline-info"
                                       title="Ver Detalle">
                                        Ver Detalle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted">
        <small>Total de ventas: <strong>@Model.Count</strong></small>
    </div>
}

