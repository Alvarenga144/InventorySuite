@model Inventory.Web.Models.ViewModels.VentaViewModel
@{
    ViewData["Title"] = $"Venta #{Model.IdVenta}";
    var subtotal = Model.Total / 1.13m; // Calcular subtotal aproximado
    var ivaTotal = Model.Total - subtotal;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Detalle de Venta #@Model.IdVenta</h2>
            <a asp-action="Index" class="btn btn-secondary">
                Volver al Listado
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Información de la Venta</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted mb-1">Fecha y Hora</label>
                        <p class="mb-0"><strong>@Model.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</strong></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted mb-1">Vendedor</label>
                        <p class="mb-0"><strong>@Model.VendedorNombre</strong></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Productos Vendidos</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Código</th>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">IVA</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td><strong>#@detalle.IdPro</strong></td>
                                    <td>@detalle.ProductoNombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">$@detalle.Precio.ToString("N2")</td>
                                    <td class="text-end">$@detalle.Iva.ToString("N2")</td>
                                    <td class="text-end"><strong>$@detalle.Total.ToString("N2")</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Resumen de Venta</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <strong>$@subtotal.ToString("N2")</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>IVA (13%):</span>
                    <strong>$@ivaTotal.ToString("N2")</strong>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5 class="mb-0">TOTAL:</h5>
                    <h5 class="mb-0 text-success">$@Model.Total.ToString("N2")</h5>
                </div>
            </div>
        </div>
    </div>
</div>

