@model Inventory.Web.Models.ViewModels.UpdateProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h4 class="mb-0">Editar Producto</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Producto" class="form-label">Nombre del Producto</label>
                        <input asp-for="Producto" class="form-control" autofocus />
                        <span asp-validation-for="Producto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label">Precio</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Precio" class="form-control" step="0.01" />
                        </div>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Actualizar Producto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

