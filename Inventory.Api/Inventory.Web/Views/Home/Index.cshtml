@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5 fw-bold">
            ¡Bienvenido, @ViewBag.UserName! 👋
        </h1>
        <p class="text-muted">Aquí tienes un resumen de tu sistema de inventario y ventas</p>
    </div>
</div>

<div class="row g-4">
    <!-- Card: Productos -->
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="mb-3" style="font-size: 3rem; color: var(--brand-accent);">
                    <i class="bi bi-box-seam"></i>
                </div>
                <h3 class="card-title h2 mb-2">@((int?)ViewBag.TotalProductos ?? 0)</h3>
                <p class="text-muted mb-0">Total Productos</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center mb-3">
                <a asp-controller="Productos" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-box-seam me-1"></i>
                    Ver Productos
                </a>
            </div>
        </div>
    </div>

    <!-- Card: Ventas del Día -->
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="mb-3" style="font-size: 3rem; color: var(--brand-accent);">
                    <i class="bi bi-cash-coin"></i>
                </div>
                <h3 class="card-title h2 mb-2">@((int?)ViewBag.TotalVentasHoy ?? 0)</h3>
                <p class="text-muted mb-0">Ventas Hoy</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center mb-3">
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-receipt me-1"></i>
                    Ver Ventas
                </a>
            </div>
        </div>
    </div>

    <!-- Card: Total Ventas Mes -->
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="mb-3" style="font-size: 3rem; color: var(--brand-accent);">
                    <i class="bi bi-graph-up"></i>
                </div>
                <h3 class="card-title h2 mb-2">--</h3>
                <p class="text-muted mb-0">Ventas del Mes</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center mb-3">
                <a asp-controller="Reportes" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-bar-chart-line me-1"></i>
                    Ver Reportes
                </a>
            </div>
        </div>
    </div>

    <!-- Card: Nueva Venta -->
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="mb-3" style="font-size: 3rem; color: var(--brand-accent);">
                    <i class="bi bi-cart-plus"></i>
                </div>
                <h3 class="card-title h2 mb-2">Nueva Venta</h3>
                <p class="text-muted mb-0">Registra una venta</p>
            </div>
            <div class="card-footer bg-transparent border-0 text-center mb-3">
                <a asp-controller="Ventas" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="bi bi-cart-plus me-1"></i>
                    Crear Venta
                </a>
            </div>
        </div>
    </div>
</div>
